#include <iostream>
#include <string>
using namespace std;

class TaiKhoan {
private:
    std::string chuSoHuu;
    double soDuVND;
    const double TY_LE_DOI = 24000; 

public:
    TaiKhoan(const std::string& chuSoHuu, double soDuVND) : chuSoHuu(chuSoHuu), soDuVND(soDuVND) {}

    std::string getChuSoHuu() const {
        return chuSoHuu;
    }

    double getSoDuVND() const {
        return soDuVND;
    }

    void guiTien(double soTienVND) {
        soDuVND += soTienVND;
    }

    void rutTien(double soTienVND) {
        if (soTienVND < 0) {
            std::cout << "So tien rut phai lon hon 0" << std::endl;
            return;
        }
        if (soTienVND > soDuVND) {
            std::cout << "So du khong du de rut" << std::endl;
        } else {
            soDuVND -= soTienVND;
        }
    }

    double getSoDuUSD() const {
        return soDuVND / TY_LE_DOI;
    }
};

int main() {
    TaiKhoan taiKhoan("Bui Luong Minh Duc", 100000);

    std::cout << "Chu so huu tai khoan: " << taiKhoan.getChuSoHuu() << std::endl;
    std::cout << "So du tai khoan: " << taiKhoan.getSoDuVND() << " VND (" << taiKhoan.getSoDuUSD() << " USD)" << std::endl;

    taiKhoan.guiTien(50000);
    taiKhoan.rutTien(30000);
    taiKhoan.rutTien(20000);

    return 0;
}
