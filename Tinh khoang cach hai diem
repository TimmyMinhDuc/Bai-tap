#include <iostream>
#include <cmath>

using namespace std;

class Point {
	private:
		double x, y;
	
	public:
		Point() : x(0), y(0) {}
		Point(double x, double y) : x(x), y(y) {}
		void setX(double x) {
			this->x=x;
		}
		void setY(double y) {
			this->y=y;
		}
		void setXY(double x, double y) {
			this->x=x;
			this->y=y;
		}
		
		double getX() const {
			return x;
		}	
		double getY() const {
			return y;
		}
		double distance(double x, double y) {
			return sqrt(pow(this->x - x, 2) + pow(this->y - y, 2));
    	}
    	double distance(const Point& another) {
        	return sqrt(pow(this->x - another.x, 2) + pow(this->y - another.y, 2));
    }
};

int main() {
	Point p1(3, 4);
	Point p2;
	p2.setXY(6, 8);
	
	std::cout << "Khoang cach tu P1 den P2: " << p1.distance(p2) << std::endl;
	std::cout << "Khoang cach tu P1 den (0,0): " << p1.distance(0, 0) << std::endl;
	
	return 0;
}
